<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/container_padding">

    <EditText
        android:id="@+id/text_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="@string/hint_input"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textNoSuggestions" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_item_margin"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/crypt_algo"
            android:layout_width="0dp"
            android:layout_height="@dimen/dropdown_height"
            android:layout_marginStart="@dimen/view_item_margin"
            android:layout_marginLeft="@dimen/view_item_margin"
            android:layout_marginEnd="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:layout_weight="1"
            android:entries="@array/encr_algo" />

        <Button
            android:id="@+id/text_encrypt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:text="@string/button_encrypt" />

        <Button
            android:id="@+id/text_decrypt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:text="@string/button_decrypt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_item_margin"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/hash_algo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dropdown_height"
            android:layout_marginStart="@dimen/view_item_margin"
            android:layout_marginLeft="@dimen/view_item_margin"
            android:layout_marginEnd="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:entries="@array/hash_algo" />

        <EditText
            android:id="@+id/text_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:background="@android:color/transparent"
            android:hint="@string/hint_password"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:singleLine="true" />

    </LinearLayout>

    <EditText
        android:id="@+id/text_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/view_item_margin"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="@string/hint_output"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textNoSuggestions" />

    <Switch
        android:id="@+id/hex_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_item_margin"
        android:textOff="@string/switch_base64_view"
        android:textOn="@string/switch_hex_view" />

</LinearLayout>