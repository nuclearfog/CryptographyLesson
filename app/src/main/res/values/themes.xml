<resources>
    <style name="Theme.CryptoLesson" parent="Theme.AppCompat">
        <item name="android:background">@color/grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionMenuTextColor">@color/text_color</item>
    </style>

    <style name="SwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="LicenseDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/license_text_size_small</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>